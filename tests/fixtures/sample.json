{
  "title": "Hybrid Search Configuration",
  "version": "1.0.0",
  "description": "Configuration and metadata for the hybrid RAG search system",
  "search_methods": {
    "dense": {
      "enabled": true,
      "model": "intfloat/multilingual-e5-base",
      "embedding_dimension": 768,
      "distance_metric": "cosine"
    },
    "sparse": {
      "enabled": true,
      "algorithm": "BM25",
      "language": "simple",
      "ranking_function": "ts_rank"
    },
    "trigram": {
      "enabled": true,
      "extension": "pg_trgm",
      "similarity_threshold": 0.3
    }
  },
  "fusion": {
    "algorithm": "reciprocal_rank_fusion",
    "k_parameter": 60,
    "description": "RRF combines rankings using the formula: 1/(k + rank)"
  },
  "chunking": {
    "strategy": "fixed_size",
    "chunk_size_tokens": 512,
    "overlap_tokens": 50,
    "tokenizer": "cl100k_base"
  },
  "generation": {
    "model": "Qwen/Qwen2.5-0.5B-Instruct",
    "max_new_tokens": 512,
    "temperature": 0.7,
    "prompt_template": "Based on the context, answer the question."
  },
  "supported_formats": ["txt", "md", "json"],
  "file_constraints": {
    "max_size_bytes": 10485760,
    "allowed_content_types": [
      "text/plain",
      "text/markdown",
      "application/json"
    ]
  },
  "languages": ["ko", "en"],
  "keywords": [
    "RAG",
    "hybrid search",
    "semantic search",
    "vector database",
    "LLM",
    "NLP"
  ]
}
